<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FirstActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ensor_main"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/btn_start_kakao_login"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_button_gray"
        android:gravity="center"
        android:text="카카오톡으로 로그인"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:backgroundTint="#FFEA20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/kakao"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_start_kakao_login"
        app:layout_constraintStart_toStartOf="@+id/btn_start_kakao_login"
        app:layout_constraintTop_toTopOf="@+id/btn_start_kakao_login" />

    <Button
        android:id="@+id/btn_start_kakao_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#f9e000"
        android:text="카카오 로그아웃"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_kakao_login" />

    <Button
        android:id="@+id/btn_start_kakao_unlink"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#f9e000"
        android:text="카카오 연결끊기"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_kakao_logout" />


